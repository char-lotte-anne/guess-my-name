{
  "version": 2,
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)\\.(css|js|svg|png|jpg|jpeg|gif|ico|woff|woff2|ttf|otf|pdf)",
      "destination": "/src/$1.$2"
    },
    {
      "source": "/",
      "destination": "/src/index.html"
    },
    {
      "source": "/:path*",
      "destination": "/src/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}

